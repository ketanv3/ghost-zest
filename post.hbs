{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="site-header max-width">
    <div class="site-title"><a href="{{@blog.url}}" class="site-nav-link hover-blue">{{@blog.title}}</a></div>
    {{> "site-nav"}}
</header>

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <article class="post-full max-width {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

            <header class="post-card-header lr-padding">
                <a class="post-card-content-link" href="{{url}}">
                    <h2 class="post-card-title">{{title}}</h2>
                </a>

                <p class="post-card-details">Published on <time class="post-full-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM, YYYY"}}</time>
                    {{#if primary_tag}}
                        {{#primary_tag}}
                             in <a href="{{url}}"><span class="post-card-tags hover-black">{{name}}</span></a>
                        {{/primary_tag}}
                    {{/if}}
                </p>
            </header>

            {{#if feature_image}}
                <img class="post-card-image max-width" src="{{feature_image}}" />
            {{/if}}

            <section class="post-full-content lr-padding">
                {{content}}
            </section>

            <section class="share-container lr-padding">
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;" class="share-icon facebook">Facebook<i class="fa fa-thumbs-o-up" aria-hidden="true"></i></a>
                <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;" class="share-icon twitter">Twitter<i class="fa fa-twitter" aria-hidden="true"></i></a>
            </section>

        </article>

    </div>
</main>

{{/post}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}

{{/contentFor}}
