<article class="post-card max-width {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    <header class="post-card-header lr-padding">
        <a class="post-card-content-link hover-blue" href="{{url}}">
            <h2 class="post-card-title">{{title}}</h2>
        </a>

        <p class="post-card-details">
            By <span class="post-card-author">{{authors}}</span>

            {{#if primary_tag}}
                {{#primary_tag}}
                     in <a href="{{url}}"><span class="post-card-tags hover-black">{{name}}</span></a>
                {{/primary_tag}}
            {{/if}}
        </p>
    </header>

    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <img class="post-card-image max-width" src="{{feature_image}}" alt="{{title}}" />
    </a>
    {{/if}}

    <section class="post-card-excerpt lr-padding">
        <p>{{excerpt words="50"}}</p>
    </section>
</article>
